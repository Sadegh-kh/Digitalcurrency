<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <ImageView
        android:id="@+id/img_item"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        style="@style/CoinBitText.Body1"
        android:id="@+id/txtCoinName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="BTC"
        app:layout_constraintStart_toEndOf="@+id/img_item"
        app:layout_constraintTop_toTopOf="@+id/img_item" />

    <TextView
        android:layout_marginStart="10dp"
        style="@style/CoinBitText.Body1Alternate"
        android:id="@+id/txtDollar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="USDT"
        app:layout_constraintStart_toEndOf="@+id/txtCoinName"
        app:layout_constraintTop_toTopOf="@+id/txtCoinName" />

    <TextView
        android:layout_marginTop="5dp"
        style="@style/CoinBitText.Body1Alternate"
        android:id="@+id/txtTaghir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CoinBase"
        app:layout_constraintStart_toStartOf="@+id/txtCoinName"
        app:layout_constraintTop_toBottomOf="@+id/txtCoinName" />

    <TextView
        android:id="@+id/txtCoinPrice"
        style="@style/CoinBitText.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$3.185"
        app:layout_constraintBottom_toBottomOf="@+id/txtDollar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtDollar" />

    <TextView
        android:id="@+id/txtMarketCap"
        style="@style/CoinBitText.Body1Alternate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="$2.4 million"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCoinPrice" />


</androidx.constraintlayout.widget.ConstraintLayout>